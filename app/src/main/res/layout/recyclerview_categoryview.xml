<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:id="@+id/catView_card"
    android:layout_height="220dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="218dp"
            android:orientation="vertical"
            android:padding="7dp">


            <ImageView
                android:id="@+id/category_view_id"
                android:layout_width="179dp"
                android:layout_height="138dp"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/category_view_name"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="Name:Item Name"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/category_view_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price:Item price"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="#F41818" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>